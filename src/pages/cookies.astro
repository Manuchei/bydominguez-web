    nav { display:flex; align-items:center; justify-content:space-between; padding:14px 0 }
    .logo-img { height:40px; vertical-align:middle }
    .logo-text {
      margin-left:8px; font-weight:700; font-size:18px;
      color:#0ea5e9;
      text-decoration:underline;
      text-underline-offset:4px;
      text-decoration-thickness:2px;
    }
    .brand { display:flex; align-items:center; gap:10px; text-decoration:none; color:var(--white) }

    /* Hero */
    .hero { padding:56px 0 26px }
    h1 { font-size:36px; line-height:1.15; margin:.2em 0 }
    .sub { color:#cbd5e1; margin-top:6px }

    /* Card */
    .card {
      background:rgba(17,24,39,.7);
      border:1px solid rgba(255,255,255,.06);
      padding:22px; border-radius:16px;
    }
    .card h2 { margin:8px 0 10px }
    .card p, .card li { color:#e5e7eb }

    /* Footer */
    footer {
      padding:36px 0; color:#94a3b8;
      border-top:1px solid rgba(255,255,255,.06);
      margin-top:36px;
    }
    .footer-flex {
      display:flex; align-items:center; justify-content:space-between;
      gap:14px; flex-wrap:wrap;
    }
    .footer-center { display:flex; align-items:center; gap:12px }
    .footer-center a { color:#cbd5e1; text-decoration:none; font-weight:600 }
    .footer-center a:hover { text-decoration:underline }
    .dot { color:#475569; opacity:.8 }

    @media (max-width:700px){
      .footer-flex { justify-content:center; text-align:center }
      .footer-center { order:-1; margin-bottom:6px }
    }
  </style>
